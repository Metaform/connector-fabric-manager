{
  "$id": "https://https://github.com/Metaform/connector-fabric-manager/deployment.definition.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DeploymentDefinitionSchema",
  "description": "Defines a Deployment Definition",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/DeploymentDefinitionType"
    }
  ],
  "definitions": {
    "DeploymentDefinitionType": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "apiVersion": {
          "type": "string"
        },
        "resource": {
          "type": "object",
          "allOf": [
            {
              "$ref": "#/definitions/ResourceType"
            }
          ]
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VersionType"
          },
          "minItems": 1
        }
      },
      "required": [
        "type",
        "apiVersion",
        "resource",
        "versions"
      ]
    },
    "ResourceType": {
      "type": "object",
      "properties": {
        "group": {
          "type": "string"
        },
        "singular": {
          "type": "string"
        },
        "plural": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "group",
        "singular",
        "plural"
      ]
    },
    "VersionType": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        },
        "schema": {
          "type": "object"
        },
        "orchestration": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OrchestrationStepType"
          }
        }
      },
      "required": [
        "version",
        "active",
        "schema",
        "orchestration"
      ]
    },
    "OrchestrationStepType": {
      "type": "object",
      "properties": {
        "parallel": {
          "type": "boolean"
        },
        "activities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ActivityType"
          }
        }
      },
      "required": [
        "activities"
      ]
    },
    "ActivityType": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "inputs": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/definitions/MappingEntryType"
              }
            ]
          }
        }
      },
      "required": [
        "id"
      ]
    },
    "MappingEntryType": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        }
      },
      "required": [
        "source",
        "target"
      ]
    }
  }
}
