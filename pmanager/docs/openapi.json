          "correlationId": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "orchestrationType": {
            "type": "string"
          },
          "payload omitempty": {
            "type": "object",
            "additionalProperties": {},
            "nullable": true
          }
        }
      },
      "ModelQuery": {
        "required": [
          "predicate"
        ],
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "format": "int64"
          },
          "offset": {
            "type": "integer",
            "format": "int64"
          },
          "predicate": {
            "type": "string"
          }
        }
      },
      "V1Alpha1Activity": {
        "type": "object",
        "properties": {
          "dependsOn omitempty": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "discriminator": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "inputs omitempty": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/V1Alpha1MappingEntry"
            },
            "nullable": true
          },
          "type": {
            "type": "string"
          }
        }
      },
      "V1Alpha1ActivityDefinition": {
        "type": "object",
