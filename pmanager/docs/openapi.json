          },
          "inputSchema omitempty": {
            "type": "object",
            "additionalProperties": {},
            "nullable": true
          },
          "outputSchema omitempty": {
            "type": "object",
            "additionalProperties": {},
            "nullable": true
          },
          "type": {
            "type": "string"
          }
        }
      },
      "V1Alpha1MappingEntry": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      },
      "V1Alpha1Orchestration": {
        "type": "object",
        "properties": {
          "completed": {
            "type": "object",
            "additionalProperties": {
              "type": "object"
            },
            "nullable": true
          },
          "correlationId": {
            "type": "string"
          },
          "createdTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string"
          },
          "orchestrationType": {
            "type": "string"
          },
          "outputData": {
            "type": "object",
            "additionalProperties": {},
            "nullable": true
          },
          "processingData": {
            "type": "object",
            "additionalProperties": {},
            "nullable": true
          },
          "state": {
            "type": "integer"
          },
          "stateTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "steps": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/V1Alpha1OrchestrationStep"
            },
            "nullable": true
          }
