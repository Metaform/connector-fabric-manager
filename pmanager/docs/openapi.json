          "description omitempty": {
            "type": "string"
          },
          "schema omitempty": {
            "type": "object",
            "additionalProperties": {},
            "nullable": true
          },
          "type": {
            "type": "string"
          }
        }
      },
      "V1Alpha1OrchestrationEntry": {
        "type": "object",
        "properties": {
          "correlationId": {
            "type": "string"
          },
          "createdTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string"
          },
          "orchestrationType": {
            "type": "string"
          },
          "state": {
            "type": "integer"
          },
          "stateTimestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "V1Alpha1OrchestrationStep": {
        "type": "object",
        "properties": {
          "activities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/V1Alpha1Activity"
            },
            "nullable": true
          }
        }
      }
    }
  }
}